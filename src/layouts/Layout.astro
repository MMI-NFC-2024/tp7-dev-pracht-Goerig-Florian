const { title = "TP7 - Données géographiques" } = Astro.props;
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-gray-50 text-gray-800">
    <header class="bg-green-700 text-white">
      <nav class="max-w-5xl mx-auto px-4 py-3 flex gap-3 text-sm">
        <a href="/" class="hover:underline">Accueil</a>
        <a href="/leaflet/" class="hover:underline">Carte Leaflet</a>
        <a href="/geojson-dynamique/" class="hover:underline"
          >GeoJSON (filtres)</a
        >
      </nav>
    </header>

    <main class="flex-1 max-w-5xl mx-auto px-4 py-6">
      <slot />
    </main>

    <footer class="bg-green-700 text-white text-center py-3 text-xs">
      TP7 Visualisation de données
    </footer>
  </body>
</html>
