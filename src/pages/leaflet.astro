---
import "leaflet/dist/leaflet.css";
---

<div id="map" style="height: 700px;"></div>

<script>
  import listeEtablissements from "../assets/listeEtablissements.json";
  import L from "leaflet";

  console.log({ listeEtablissements });

  const map = L.map("map").setView([46.6033, 1.883], 6);

  // 🗺️ Ajout du fond de carte OpenStreetMap
  L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
    attribution:
      '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
  }).addTo(map);

  // 📍 Ajout des marqueurs à partir du JSON
  listeEtablissements.forEach((etab) => {
    if (etab.lat && etab.lon) {
      const marker = L.marker([etab.lat, etab.lon]).addTo(map);
      marker.bindPopup(`<strong>${etab.name}</strong>`);
    }
  });
</script>
